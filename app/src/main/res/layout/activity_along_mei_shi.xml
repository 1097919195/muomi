<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="套餐详情"
        android:textColor="#fff"
        android:textSize="25sp"
        android:background="#0080ff"
        />
    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/bg"
        android:orientation="horizontal"
        android:layout_below="@id/title">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/one" />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="48dp"
                android:text="阿龙美食坊"
                android:textSize="30sp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="电话:12345678910"
                android:textSize="18sp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="优:￥20以上免运费"
                android:textSize="18sp"
                android:textColor="#fff"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rightarrow_btn2"
                />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/food_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bg"
        android:layout_marginBottom="50dp"
        >
    </ListView>

    <RelativeLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff2f373e"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car"
            android:src="@mipmap/car"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/car"
            android:text="0"
            android:textColor="#fff"
            android:textSize="25sp"
            android:gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/accounts"
            android:layout_alignParentRight="true"
            android:text="去结账"
            android:background="@drawable/gogo"
            android:textSize="20sp"/>
    </RelativeLayout>
</RelativeLayout>
