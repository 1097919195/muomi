<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:id="@+id/rg_activity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rb_1"
            android:button="@null"
            android:drawableTop="@drawable/reyi"
            android:text="热议区"
            android:gravity="center_horizontal"
            />

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/dingdan"
            android:gravity="center_horizontal"
            android:text="订单状态" />

        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/shouye" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rb_4"
            android:button="@null"
            android:drawableTop="@drawable/gerenzhongxin"
            android:text="个人中心"
            android:gravity="center_horizontal" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rb_5"
            android:button="@null"
            android:drawableTop="@drawable/shezhi"
            android:text="设置"
            android:gravity="center_horizontal" />
    </RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_container"
        android:layout_above="@id/rg_activity"
        android:background="#f1f1f1"
        >

    </RelativeLayout>
</RelativeLayout>
