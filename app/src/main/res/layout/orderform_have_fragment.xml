<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="订单状态"
        android:textColor="#fff"
        android:textSize="25sp"
        android:background="#0080ff"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/title"
        android:id="@+id/me"
        android:text="我的订单"
        android:textSize="25sp"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_below="@id/me">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/one" />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="阿龙美食坊"
            android:textColor="#000"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="电话:12345678910"
            android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_below="@id/bg"
        android:id="@+id/menu_one"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="1dp"
        android:text="     宫爆鸡丁盖浇饭              ×1                         ￥10"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/menu_two"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/menu_one"
        android:layout_marginTop="1dp"
        android:text="     珍珠奶茶                          ×1                         ￥7"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/menu_three"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/menu_two"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="总计￥17"
        android:textColor="#000"
        android:textSize="20sp"/>
</RelativeLayout>
